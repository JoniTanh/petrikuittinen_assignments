<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script>
         var canvas, ctx;
	 const gravity = 3;
	 class Box {
	     constructor(x, y, width, height, r, speed, phase=0) {
		 this.x = x;
		 this.y = y;
		 this.width = width;
		 this.height = height;
		 this.r = r;
		 this.speed = speed;
		 this.phase = phase;
	     }
	     update(canvas) {
		 this.x = this.x + this.r*Math.sin(this.phase);
		 this.phase += this.speed;
	     }
	     draw(ctx) {
		 let x = Math.round(this.x);
		 let y = Math.round(this.y);
		 ctx.fillRect(x, y, this.width, this.height);
		 ctx.strokeRect(x, y, this.width, this.height);
	     }
	 }
	 var boxes = [];
	 function begin() {
	     for(let i=0; i<10; i++) {
		 boxes.push(new Box(100, 100+50*i, 16, 16, i*2+2, 0));
	     }
	     draw();
	 }
         function draw() {
             window.requestAnimationFrame(draw);
             canvas = document.getElementById("canvas");
             ctx = canvas.getContext("2d");
             ctx.clearRect(0, 0, canvas.width, canvas.height);
             ctx.strokeStyle = "#000";
	     ctx.fillStyle = "#ff0";
	     for(let box of boxes) {
		 box.update(canvas);
	     }
	     for(let box of boxes) {
		 box.draw(ctx);
	     }
         }
        </script>
    </head>
    <body onload="begin()">
    <canvas id="canvas" width="1024" height="768" style="border: 1px solid #000"></canvas>
    </body>
</html>
